<Window x:Class="ChannelNineEventFeed.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChannelNineEventFeed.WPF"
        xmlns:controls="clr-namespace:ChannelNineEventFeed.WPF.Controls"
        mc:Ignorable="d"
        x:Name="mainWindow"
        Title="MainWindow" Height="768" Width="1024" WindowStartupLocation="CenterScreen">
    <Window.Resources>


        <DataGridTemplateColumn x:Key="ViewButtonColumn" MinWidth="100" Header="">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <Button Click="ViewDetailsClick">Details</Button>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36" />
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <controls:SpinnerSwirl x:Name="spinner" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        <Grid Grid.Row="1" x:Name="contentGrid">
            <Grid x:Name="eventsGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="36" />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" MaxWidth="300" MinWidth="0"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300" MaxWidth="300" MinWidth="5" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="filterControlLabel" FontFamily="Segoe UI" FontSize="16" Margin="12,0,0,0" FontWeight="Bold" Text="Filters" HorizontalAlignment="Left" />
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" CanContentScroll="True">
                    <DockPanel>
                        <controls:FilterControl x:Name="filterControl" Margin="0,0,0,200" />
                    </DockPanel>
                </ScrollViewer>
                <StackPanel Grid.Column="1" Margin="12,0,0,0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock x:Name="presentationCountLabel" FontFamily="Segoe UI" FontWeight="Bold" FontSize="16" Text="{Binding PresentationData.Count, ElementName=mainWindow}" />
                    <TextBlock x:Name="presentationTitleLabel"  FontFamily="Segoe UI" FontWeight="Bold" FontSize="16" Text=" Filtered" />
                </StackPanel>
                <DataGrid x:Name="dataGrid" Grid.Row="1" Margin="5,0,0,0" CanUserAddRows="False" CanUserSortColumns="True" FontFamily="Segoe UI" FontSize="16" Grid.Column="1" AutoGenerateColumns="False"  >
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding EventName}" Header="Event" IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding EventYear}" Header="Year" IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding Title}" Header="Title" IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding Duration}" Header="Duration" IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding SessionType}" Header="Type" IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Column="2" Margin="12,0,0,0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock x:Name="queueCountLabel"  FontFamily="Segoe UI" FontWeight="Bold" FontSize="16" Text="{Binding Queue.Count, ElementName=mainWindow}" />
                    <TextBlock x:Name="queueTitleLabel"  FontFamily="Segoe UI" FontWeight="Bold" FontSize="16" Text=" in Queue" />
                </StackPanel>
                <DataGrid x:Name="dataGridQueue" Grid.Row="1" Margin="5,0,0,0" CanUserAddRows="False" CanUserSortColumns="True" FontFamily="Segoe UI" FontSize="16" Grid.Column="2" AutoGenerateColumns="False"  >
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Title}" Header="Title" IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
                <GridSplitter 
                    Grid.Column="1" 
                    Grid.Row="1"
                    Grid.RowSpan="1" 
                    Tag="Left"
                    MouseDoubleClick="ExpandCollapseSplitter"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Stretch"
                    Background="Black" 
                    ShowsPreview="true"
                    Width="5">
                    <GridSplitter.Template>
                        <ControlTemplate TargetType="{x:Type GridSplitter}">
                            <Grid>
                                <Button Content="⁞" />
                                <Rectangle Fill="#00FFFFFF" />
                            </Grid>
                        </ControlTemplate>
                    </GridSplitter.Template>
                </GridSplitter>
                <GridSplitter 
                    Grid.Column="2" 
                    Grid.Row="1"
                    Grid.RowSpan="1" 
                    Tag="Right"
                    MouseDoubleClick="ExpandCollapseSplitter"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Stretch"
                    Background="Black" 
                    ShowsPreview="true"
                    Width="5">
                    <GridSplitter.Template>
                        <ControlTemplate TargetType="{x:Type GridSplitter}">
                            <Grid>
                                <Button Content="⁞" />
                                <Rectangle Fill="#00FFFFFF" />
                            </Grid>
                        </ControlTemplate>
                    </GridSplitter.Template>
                </GridSplitter>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" x:Name="buttonGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="ShowHideFilterPanel" Content="Hide Filter Panel" Margin="12" Padding="6" Click="ShowHideFilterPanel_Click" />
                <Button x:Name="ShowHideQueuePanel" Content="Hide Queue Panel" Margin="12" Padding="6" Click="ShowHideQueuePanel_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="NuclearOptionButton" Content="Reset Database" Margin="12,12,52,12" Padding="6" Background="Red" Click="NuclearOption_Click" />
            </StackPanel>
            <controls:NetworkConnectionStatusControl HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="30" Margin="0,0,12,0" />
            <!--<Button x:Name="buttonGetAll" Content="Init Data" Grid.Column="1" Margin="12" Click="buttonGetAllClick" />
            <Button x:Name="buttonGetCurrentYear" Content="Refresh" Grid.Column="2" Margin="12" Click="buttonGetCurrentYearClick" />
            <Button x:Name="buttonNuclearOption" Content="New Database" Margin="12" Click="buttonNuclearOptionClick" Background="Red" HorizontalAlignment="Left" />-->
        </Grid>
        
    </Grid>
</Window>
