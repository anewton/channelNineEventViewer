<UserControl x:Class="ChannelNineEventFeed.WPF.Controls.FilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChannelNineEventFeed.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300">
    <Grid x:Name="controlsGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="selectedFiltersIndicator" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="12,0,0,6" />
        <StackPanel x:Name="filterControlContainer" Orientation="Vertical" Grid.Row="1"  />
    </Grid>
    
</UserControl>
