<UserControl x:Class="ChannelNineEventFeed.WPF.Controls.NetworkConnectionStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChannelNineEventFeed.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="networkStatusControl">
    <Grid>
        <Ellipse Width="30" Height="30" Fill="Green" Visibility="{Binding IsNetworkConnected, ElementName=networkStatusControl, Converter={StaticResource BoolToVisibilityConverter}}" />

        <Ellipse Width="30" Height="30" Fill="Red" Visibility="{Binding IsNetworkConnected, ElementName=networkStatusControl, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=VisibleIfNotTrue}" />
    </Grid>
</UserControl>
