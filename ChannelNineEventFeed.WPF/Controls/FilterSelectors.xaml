<UserControl x:Class="ChannelNineEventFeed.WPF.Controls.FilterSelectors"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="textTitle" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="12" FontFamily="Segoe UI" FontSize="16" Text="" TextWrapping="Wrap" />
        <WrapPanel x:Name="selectors"  Grid.Row="1" Orientation="Horizontal" />
    </Grid>
</UserControl>
